{% extends 'base.html.twig' %}
{% block body %}

    <p><h3>Liste des evenements</h3></p>
    <div align="center"><a style="margin-top: 100px"></a></div>
    <div class="table-responsive  table--no-card m-b-30">
        <table class="table table-borderless table-striped table-earning">


            <div align="center",style="margin-top: 100px" class="card-body">

            <thead>
            <tr>
                <th>Nom &nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp</th>
                <th>Lieu &nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp</th>
                <th>Date_debut &nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp</th>
                <th>Date_fin &nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp</th>
                <th>Description &nbsp&nbsp&nbsp&nbsp</th>
                <th>Image  &nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp</th>

            </tr>
            </thead>
            <tbody>
            {% for event in tabEvent %}
                <tr>
                    <td>{{ event.nom }}&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp</td>
                    <td>{{ event.lieu }}&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp</td>
                    <td>{{ event.date|date('d-m-Y') }}&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp</td>
                    <td>{{ event.datefin|date('d-m-Y') }}&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp</td>
                    <td>{{ event.description }}&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp</td>


                    <td> <img class="-google-plus-circle" src="{{ asset('uploads/images/') ~ event.image }}"alt="" width="192" height="140" >  &nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp</td>

                </tr>


                <br>


            {% endfor %}
            </tbody>
            </div>


        </table>
    </div>

    </div>
{% endblock %}