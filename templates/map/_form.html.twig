{# templates/map/add_location.html.twig #}

{% extends 'base.html.twig' %}

{% block body %}
    <h1>Add Location</h1>

    {{ form_start(form) }}
    {{ form_row(form.name) }}
    {{ form_row(form.latitude) }}
    {{ form_row(form.longitude) }}

    <button type="submit" class="btn btn-primary">Add</button>
    {{ form_end(form) }}
{% endblock %}
