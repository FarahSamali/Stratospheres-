{% extends 'base.html.twig' %}

{% block title %}Location index{% endblock %}
{% block stylesheets %}

    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('https://cdnjs.cloudflare.com/ajax/libs/leaflet/1.7.1/leaflet.css') }}" />
    <style>
        *{
            font-family: "Cambria";

        }

        #map{

            width: 100%;
            height: 100vh;
        }
    </style>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
<script src="{{ asset('https://cdnjs.cloudflare.com/ajax/libs/leaflet/1.7.1/leaflet.js') }}"></script>
{% endblock %}

{% block body %}
    <h1>Location index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Latitude</th>
                <th>Longitude</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for location in locations %}
            <tr>
                <td>{{ location.id }}</td>
                <td>{{ location.name }}</td>
                <td>{{ location.latitude }}</td>
                <td>{{ location.longitude }}</td>
                <td>
                    <a href="{{ path('app_map_show', {'id': location.id}) }}">show</a>
                    <a href="{{ path('app_map_edit', {'id': location.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_map_new') }}">Create new</a>
{% endblock %}
