{% extends 'base.html.twig'  %}

{% block body %}
    <!-- ======= Breadcrumbs ======= -->
    <section id="breadcrumbs" class="breadcrumbs">
        <div class="container">

            <div class="d-flex justify-content-between align-items-center">
                <h2>Annonce</h2>
                <ol>
                    <li><a href="index.html">Home</a></li>
                    <li><a  href="{{ path('annonce_aff') }}">Annonces</a></li>
                </ol>
            </div>

        </div>
    </section><!-- End Breadcrumbs -->
<!-- ======= Blog Single Section ======= -->
    <section id="blog" class="blog">
        <div class="container" data-aos="fade-up">

            <div class="row">

                <div class="col-lg-8 entries">

                    <article class="entry entry-single">

                        <div class="entry-img">
                            <img src="{{ asset('uploads/annonce/'~annonce.image) }}" style=" margin-left: 55px ; margin-top: 20px " alt=""/>
                        </div>

                        <h2 class="entry-title">
                            <a href="blog-single.html">  {{ annonce.titre }}</a>
                        </h2>

                        <div class="entry-meta">
                            <ul>
                                <li class="d-flex align-items-center"><i class="bi bi-person"></i>{{ annonce.nom }}</li>
                                <li class="d-flex align-items-center"><i class="bi bi-telephone"></i>{{ annonce.tel }}</li>
                                <li class="d-flex align-items-center"><i class="bi bi-mailbox2"></i>{{ annonce.email }}</li>
                                <li class="d-flex align-items-center"><i class="bi bi-map"></i>{{ annonce.local }}</li>

                            </ul>
                            <ul>
                                <li class="d-flex align-items-center"><i class="bi bi-clock-fill"></i>{{ annonce.etat }}</li>
                                <li class="d-flex align-items-center"><i class="bi bi-card-text"></i>{{ annonce.categorie }}</li>
                                <li class="d-flex align-items-center"><i class="bi bi-tag"></i>{{ annonce.tag }}</li>
                            </ul>
                        </div>

                        <div class="entry-content">
                            <p>
                                {{ annonce.descreption }}
                            </p>

                        </div>



                    </article><!-- End blog entry -->



                    <div class="blog-comments">

                        <h4 class="comments-count">  <a  href="{{ path('comm_affichage',{'idAnnonce':annonce.id}) }}">Commenter</a></h4>
                    </div><!-- End blog comments -->

                </div><!-- End blog entries list -->

                <div class="col-lg-4">

                    <div class="sidebar">

                        <h3 class="sidebar-title">Categories</h3>
                        <div class="sidebar-item categories">
                            <ul>
                                <li><a href="#">Appareil médical <span>(25)</span></a></li>
                                <li><a href="#">Equipement médical <span>(12)</span></a></li>
                                <li><a href="#">Fourniture médical <span>(5)</span></a></li>
                                <li><a href="#">Autres <span>(22)</span></a></li>
                            </ul>
                        </div><!-- End sidebar categories-->

                        <h3 class="sidebar-title">Tags</h3>
                        <div class="sidebar-item tags">

                                    <ul>
                                        <li><a href="#">{{ annonce.tag }}</a></li>


                                    </ul>

                        </div><!-- End sidebar tags-->

                    </div><!-- End sidebar -->

                </div><!-- End blog sidebar -->

            </div>

        </div>
    </section><!-- End Blog Single Section -->
{% endblock  %}
